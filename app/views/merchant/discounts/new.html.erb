<center>
  <%= form_with url: merchant_discounts_path, local: true, html: { method: :post } do |f| %>

    <%= f.label :name %>
    <%= f.text_field :name, :value => @discount[:name] %>

    <%= f.label :number_items %>
    <%= f.text_field :number_items, :value => @discount[:number_items] %>

    <%= f.label :percent %>
    <%= f.text_field :percent, :value => @discount[:percent] %>

    <%= f.submit("Submit") %>

  <% end %>

</center>
